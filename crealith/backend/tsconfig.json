{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "src/__tests__/**/*",
    "src/middleware/rate-limit.middleware.ts",
    "src/utils/redis-security.ts",
    "src/utils/imagekit.ts",
    "src/middleware/validation.middleware.ts"
  ]
}
