# Database - REMPLACER PAR VOS VRAIES CRÉDENTIALS
DATABASE_URL="postgresql://username:password@localhost:5432/crealith_db"

# JWT - Access Token (courte durée) - GÉNÉRER UN SECRET FORT DE 64+ CARACTÈRES
JWT_ACCESS_SECRET="your_64_character_strong_secret_here_for_access_token"
JWT_ACCESS_EXPIRES_IN="15m"

# JWT - Refresh Token (longue durée) - GÉNÉRER UN SECRET FORT DE 64+ CARACTÈRES
JWT_REFRESH_SECRET="your_64_character_strong_secret_here_for_refresh_token"
JWT_REFRESH_EXPIRES_IN="7d"

# JWT - Legacy (pour compatibilité) - GÉNÉRER UN SECRET FORT DE 64+ CARACTÈRES
JWT_SECRET="your_64_character_strong_secret_here_for_legacy_compatibility"
JWT_EXPIRES_IN="7d"

# Server
PORT=5000
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"

# Redis Configuration - CONFIGURER SELON VOTRE ENVIRONNEMENT
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password_here"
REDIS_DB="0"
REDIS_TLS="false"

# Stripe - CONFIGURER AVEC VOS VRAIES CLÉS
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret"

# ImageKit - CONFIGURER AVEC VOS VRAIES CLÉS
IMAGEKIT_PUBLIC_KEY="your_imagekit_public_key"
IMAGEKIT_PRIVATE_KEY="your_imagekit_private_key"
IMAGEKIT_URL_ENDPOINT="https://ik.imagekit.io/your_endpoint"

# CORS - CONFIGURER SELON VOTRE ENVIRONNEMENT
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting - CONFIGURER SELON VOS BESOINS
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration - CONFIGURER POUR LES NOTIFICATIONS (Gmail App Password recommandé)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"
SMTP_FROM="your_email@gmail.com"

# Security
BCRYPT_ROUNDS="12"
SESSION_SECRET="your_session_secret_here"

# File Upload
MAX_FILE_SIZE="10485760"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf,application/zip"

# Monitoring & Logging
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Logging
LOG_LEVEL="info"

# Google OAuth2 (renseigner vos propres identifiants; ne pas committer de secrets)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_CALLBACK_URL="http://localhost:5000/api/auth/google/callback"

# Redirections autorisées (séparées par des virgules)
ALLOWED_REDIRECT_ORIGINS="http://localhost:3000,https://crealith.com,https://www.crealith.com"
